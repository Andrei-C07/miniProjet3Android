<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.ListeSucursales"
        android:label="fragment_home2"
        tools:layout="@layout/liste_sucursales" >

        <argument
            android:name="key"
            app:argType="string" />
        <argument
            android:name="utilisateur"
            app:argType="string" />
        <action
            android:id="@+id/action_homeFragment_to_budgetFragment"
            app:destination="@id/budgetFragment" />
    </fragment>

    <fragment
        android:id="@+id/budgetFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.BudgetFragment"
        android:label="fragment_budget"
        tools:layout="@layout/fragment_budget">

        <argument
            android:name="ville"
            app:argType="string" />
        <argument
            android:name="aut"
            app:argType="string" />
    </fragment>

</navigation>