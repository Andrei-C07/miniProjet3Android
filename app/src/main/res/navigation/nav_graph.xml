<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.ListeSucursales"
        android:label="fragment_home2"
        tools:layout="@layout/liste_sucursales" >

        <argument
            android:name="key"
            app:argType="string" />
        <argument
            android:name="utilisateur"
            app:argType="string" />
        <action
            android:id="@+id/action_homeFragment_to_budgetFragment"
            app:destination="@id/budgetFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ajoutSuccursaleFragment"
            app:destination="@id/ajoutSuccursaleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_modifierSuccursaleFragment"
            app:destination="@id/modifierSuccursaleFragment" />
    </fragment>

    <fragment
        android:id="@+id/budgetFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.BudgetFragment"
        android:label="fragment_budget"
        tools:layout="@layout/fragment_budget">

        <argument
            android:name="ville"
            app:argType="string" />
        <argument
            android:name="aut"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/ajoutSuccursaleFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.AjoutSuccursaleFragment"
        android:label="fragment_ajout_succursale"
        tools:layout="@layout/fragment_ajout_succursale">
        <argument
            android:name="aut"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/modifierSuccursaleFragment"
        android:name="ca.qc.cgodin.miniprojet3.view.ModifierSuccursaleFragment"
        android:label="Modifier Succursale"
        tools:layout="@layout/fragment_modifier_succursale">
        <argument android:name="aut" app:argType="string" />
        <argument android:name="ville" app:argType="string" />
        <argument android:name="budget" app:argType="integer" />
    </fragment>
</navigation>